<div id="container">
  <div class="banner eventos">
      <div class="row">
        <div class="col-md-12 text-center">
          <h1 class="m-0">Eventos</h1>
          <a href="https://quecarrerape.herokuapp.com/">HOME</a>
          <span> / </span> EVENTOS
        </div>
      </div>
      <%= image_tag "wave1.png" %>
  </div>
</div>

  <div class= "container">
    <div class="cards-event">
      <% @events.each do |event| %>
        <div class="card-event">
          <%= cl_image_tag event.photo.key, height: 200, width: 200, crop: :fill %>
          <div class="card-event-infos">
            <h2><strong><%=link_to event.name, event_path(event) %></strong></h2>
            <h3><i class="fas fa-user-circle" ></i> <%=  event.user.first_name %> <%= event.user.last_name %></h3>
            <h3><i class="fas fa-calendar-day" ></i> <%=  event.date.strftime('%a, %b %d') %></h4>
            <h3><i class="fa-regular fa-clock-eight" ></i> <%=  event.date.strftime("%I:%M %p") %></h4>
          </div>
        </div>
      <% end %>
    </div>
  </div>
