<%= simple_form_for event do |f| %>
  <%= f.input :name, label: "Título" %>
  <%= f.input :description, label: "Descripción" %>
  <%= f.input :modality, label: "Modalidad", collection: ["Presencial", "Virtual"] %>
  <%= f.input :address, label: "Dirección" %>
  <%= f.input :date, label: "Fecha y hora"%>
  <%= f.input :photo, as: :file, label: "Imagen del evento" %>
  <%= f.submit "Guardar", class: "btn btn-dark mb-4 mt-4" %>
<% end %>

<script>
  const modalitySelector = document.querySelector("#event_modality")
  const addressSelector = document.querySelector("#event_address")
  modalitySelector.addEventListener("change", (event)=>{
    if (event.target.value=="Virtual") {
      addressSelector.value = ""
      addressSelector.disabled = true
    } else {
      addressSelector.disabled = false
    }
  })
</script>
