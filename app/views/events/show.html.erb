<div class="header">
  <h1>Eventos</h1>
  <a href="https://quecarrerape.herokuapp.com/">HOME</a>
  <span> / </span> EVENTOS
</div>

<div class="container">
  <div class="card-event-only">
    <%= cl_image_tag @event.photo.key, height: 200, width: 200, crop: :fill %>
    <div class="card-event-only-infos mt-3 mb-3">
      <h1><strong><%= @event.name %></strong></h1>
      <p><strong>Fecha: </strong><%= @event.date %></p>
      <p><strong>Modalidad: </strong><%= @event.modality %></p>
      <p><strong>Descripción del evento: </strong><%= @event.description %></p>
    </div>

    <div>
      <% if current_user == @event.user %>
        <%= link_to 'Editar', edit_event_path(@event) , class: "btn btn-ghost mt-3 ml-3"  %>
        <%= link_to 'Eliminar', event_path(@event), class: "btn btn-ghost mt-3 ml-3" ,method: :delete, data: { confirm: "¿Estás seguro?" } %>
        <%= link_to 'Regresar', events_path, class: "btn btn-ghost mt-3 ml-3"  %>
      <% else %>
        <%= link_to 'Regresar', events_path, class: "btn btn-ghost mt-3 ml-3"  %>
        <%= link_to 'Inscribirme', register_event_path(@event), method: :post, class: "btn btn-ghost" %>
      <% end %>
    </div>
  </div>
</div>
