<div id="container">
  <div class="banner eventos">
      <div class="row">
        <div class="col-md-12 text-center">
         <h1 class="m-3 mt-3 text-center">Editar una carrera a una institución</h1>
        </div>
      </div>
      <%= image_tag "wave1.png" %>
  </div>
</div>

<div class= "container">
  <div id="card_signup_create">
    <div class="card-new">
      <%= simple_form_for @career_institution do |f| %>
        <%= f.input :institution_id, collection: Institution.all %>
        <%= f.input :career_id, collection: Career.all %>
        <%= f.submit "Guardar", class: "btn btn-dark mb-3 mt-3" %>
      <% end %>
    </div>
    <%= link_to 'Regresar a Relación Carrera-Institución', career_institution_path(@career_institution), class: "btn btn-ghost m-5" %>
  </div>
</div>
