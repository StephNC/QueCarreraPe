<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky-top bg-white border-bottom">
  <div class="container-fluid py-2">
      <%= link_to "/", class: "navbar-brand" do %>
      <%= image_tag "logo_v3.png"%>
      <% end %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <%= link_to "Home", "http://www.quecarrera.site/", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Carreras", careers_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Instituciones", institutions_path, class: "nav-link"%>
          </li>
          <li class="nav-item">
            <%= link_to "Eventos", events_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Test Vocacional", test_path, class: "nav-link" %>
          </li>
        <% if user_signed_in? %>

          <li class="nav-item active px-2">
            <strong class= "user-name">¡Bienvenid@ <%=current_user.first_name %>! </strong>
          </li>

          <li class="nav-item dropdown">
            <% if current_user.photo.key.nil? %>
              <%= image_tag "https://una.uniandes.edu.co/templates/yootheme/cache/default-pupil-profile-19f21a82.png", class: "avatar", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
              <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Mis eventos", booking_requests_path, class: "dropdown-item" %>
              <%= link_to "Editar mi perfil", edit_user_registration_path, class: "dropdown-item" %>
              <%= link_to "Cerrar sesión", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>

        <% else %>
          <li class="nav-item">
              <%= link_to "Login", new_user_session_path, class: "nav-link-btn btn btn-dark text-white" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
