<%= simple_form_for career do |f| %>
  <%= f.input :name, label: 'Nombre de la carrera' %>
  <%= f.input :area, label: 'Área'%>
  <%= f.input :duration, label: 'Duración (número de semestres)'%>
  <%= f.input :profile, label: 'Perfil' %>
  <%= f.input :description, label: 'Descripción' %>
  <%= f.input :photo, label: 'Imagen de la carrera', as: :file %>
  <%= f.submit "Guardar", class: "btn btn-dark mb-4 mt-4" %>
<% end %>
